extends layout

block content
  
  div(class="wrapper")  
    div(class="links")
        a(href="/inventory" class="header") Home
        a(href="/inventory/categories") Categories   
        a(href="/inventory/items" class="header") Items

        
    h1 #{category.name}
    p #{category.description}
    div(class="create")
      h3 Items
      a(class="button" href=category.url+"/createItem") Create Item

      //form(method='POST' action="/inventory/item/create")
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )
        button(type="submit" class="button") Create Item
    if itemList.length
      div(class="grid")
        each item in itemList
          div(class="card")
            a(href=item.url) #{item.name}
            p Price: Â£#{item.price}
            p Stock: #{item.stock}  
    else
      p There are no items. Please create one.
    
    div(class="button-group")
      a(class="button" href=category.url+"/update") Update Category
      a(class="button" href=category.url+"/delete") Delete Category
    